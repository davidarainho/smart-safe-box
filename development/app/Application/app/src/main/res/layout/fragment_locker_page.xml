<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".LockerPageFragment">

    <ImageView
        android:id="@+id/wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:rotation="1"
        android:scaleType="centerCrop"
        android:scaleX="1.2"
        android:scaleY="1"
        android:translationY="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wave" />


    <TextView
        android:id="@+id/locker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:text="@string/name_label"
        android:textColor="@color/Text_Bold"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/locker_user_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="#Locker_User_Identifier"
        android:textColor="@color/Text_Bold"
        app:layout_constraintStart_toStartOf="@+id/locker_name"
        app:layout_constraintTop_toBottomOf="@+id/locker_name" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave"
        app:srcCompat="@drawable/lock_closed"
        android:focusable="true" />

    <Button
        android:id="@+id/share_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_view_blue"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="30dp"
        android:paddingVertical="0dp"
        android:text="@string/share_lock"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/last_accessed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Text_Bold"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="3dp"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_lock"
        android:text="@string/last_accessed" />

    <TextView
        android:id="@+id/more_info_accesses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_buttons"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="3dp"
        android:textSize="18sp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_accessed"
        android:text="@string/info"
        android:focusable="true" />

    <TextView
        android:id="@+id/number_of_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Text_Bold"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="3dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/more_info_accesses"
        android:text="@string/number_of_users" />

    <TextView
        android:id="@+id/more_info_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_buttons"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="3dp"
        android:textSize="18sp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_of_users"
        android:text="@string/info"
        android:focusable="true" />

    <TextView
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Text_Bold"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="3dp"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/more_info_number"
        android:text="@string/change_lock_password"
        android:focusable="true" />

    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:text="@string/exit"
        android:textColor="@color/blue_buttons"
        android:textSize="18sp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_password" />

</androidx.constraintlayout.widget.ConstraintLayout>