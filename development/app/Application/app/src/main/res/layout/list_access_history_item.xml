<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/item_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_view_outlined_boxes"
        android:clickable="false"
        android:gravity="start"
        android:paddingHorizontal="40dp"
        android:paddingVertical="30dp"
        android:textColor="@color/Text_Bold"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Options" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Date"
        android:textSize="17sp"
        android:textColor="@color/Text_Bold"
        app:layout_constraintEnd_toEndOf="@id/item_history"
        app:layout_constraintTop_toTopOf="@id/item_history"
        app:layout_constraintBottom_toBottomOf="@id/item_history"
        android:elevation="10dp"
        android:layout_marginEnd="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

